<!-- sections/gift-header.liquid -->

<style>
  @import url('https://fonts.googleapis.com/css2?family=Jost:wght@400;500;700&display=swap');

  /* Desktop and tablet styles */
  .gift-section-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #F5F5F5;
    padding: 24px;
    font-family: 'Jost', sans-serif;
  }
  
  .gift-brand {
    font-size: 26px;
    font-weight: 700;
    letter-spacing: 1px;
    color: #000000;
  }
  
  .gift-tagline {
    font-size: 16px;
    color: #000000;
    flex: 1;
    text-align: center;
  }
  
  .gift-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 500;
    padding: 10px 32px;
    background: #ffeb3b;
    color: #111;
    border: none;
    border-radius: 0px;
    text-decoration: none;
    transition: color 0.3s ease;
    overflow: hidden;
    position: relative;
    z-index: 1;
  }
  
  .gift-button::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 0%;
    background: #111;
    transition: width 0.35s cubic-bezier(0.4,0,0.2,1);
    z-index: -1;
  }
  
  .gift-button:hover::before {
    width: 100%;
  }
  
  .gift-button:hover {
    color: #fff;
    box-shadow: 0 4px 18px rgba(0,0,0,0.18);
  }
  
  .gift-arrow {
    font-size: 26px;
    font-weight: 700;
    line-height: 1;
    margin-top: -5px;
    margin-right: -5px;
    display: flex;
    align-items: center;
  }

  /* Hamburger button - hidden desktop */
  .hamburger {
    display: none;
    cursor: pointer;
    background: none;
    border: none;
    padding: 8px;
    margin-left: 16px;
  }

  .hamburger div {
    width: 25px;
    height: 3px;
    background-color: #111;
    margin: 5px 0;
    transition: 0.4s;
  }

  /* Mobile styles */
  @media (max-width: 767px) {
    .gift-section-row {
      justify-content: flex-start;
      padding: 16px;
      position: relative;
    }

    .gift-tagline,
    .gift-button {
      display: none;
      width: 100%;
      padding: 12px 16px;
      background: #fff;
      color: #000;
      text-align: center;
      font-size: 16px;
      box-sizing: border-box;
    }

    .gift-button {
      display: inline-flex; /* Initially hidden, shown when menu open */
      justify-content: center;
      margin-top: 8px;
      border-radius: 4px;
      font-weight: 500;
      font-size: 16px;
      padding: 12px 0;
      background: #ffeb3b;
      color: #111;
      cursor: pointer;
      position: relative;
      overflow: hidden;
      transition: color 0.3s ease;
    }

    .gift-button::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      height: 100%;
      width: 0%;
      background: #111;
      transition: width 0.35s cubic-bezier(0.4,0,0.2,1);
      z-index: -1;
    }
    .gift-button:hover::before {
      width: 100%;
    }
    .gift-button:hover {
      color: #fff;
      box-shadow: 0 4px 18px rgba(0,0,0,0.18);
    }

    .gift-arrow {
      font-size: 26px;
      font-weight: 700;
      line-height: 1;
      margin-top: -5px;
      margin-right: -5px;
      display: flex;
      align-items: center;
    }

    .hamburger {
      display: block;
      position: absolute;
      right: 16px;
      top: 24px;
      z-index: 10;
    }

    /* When menu is active, show tagline and button */
    .gift-section-row.menu-open .gift-tagline,
    .gift-section-row.menu-open .gift-button {
      display: block;
    }

    /* Stack vertically when menu open */
    .gift-section-row.menu-open {
      flex-direction: column;
      align-items: flex-start;
      padding-bottom: 24px;
    }

    .gift-brand {
      font-size: 22px;
      font-weight: 700;
      letter-spacing: 1px;
      color: #000;
    }
  }
</style>

<div class="gift-section-row" id="gift-section">
  <div class="gift-brand">
    {{ section.settings.brand_name }}
  </div>

  <button class="hamburger" id="hamburger-btn" aria-label="Toggle menu" aria-expanded="false" aria-controls="menu-content">
    <div></div>
    <div></div>
    <div></div>
  </button>

  <div class="gift-tagline" id="menu-content">
    {{ section.settings.tagline }}
  </div>

  <a class="gift-button">
    <span>{{ section.settings.gift_button_text }}</span>
    <span class="gift-arrow">&rarr;</span>
  </a>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var hamburgerBtn = document.getElementById('hamburger-btn');
    var giftSection = document.getElementById('gift-section');
    
    hamburgerBtn.addEventListener('click', function() {
      var isOpen = giftSection.classList.toggle('menu-open');
      hamburgerBtn.setAttribute('aria-expanded', isOpen);
    });
  });
</script>

<div class="image-banner-row">
  
   <div class="title-name">
    {{ section.settings.title_name }}
  </div>

</div>

{% schema %}
{
  "name": "Top Gift",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "gift_button_text",
      "label": "Gift Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "text",
      "id": "title_name",
      "label": "Title Name",
      "default": "The Gift Guide"
    },
    {
      "type": "text",
      "id": "header_tagline",
      "label": "Header Tagline",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "shop_button_text",
      "label": "Shop Button Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Top Gift(custom)"
    }
  ]
}
{% endschema %}
